/* @import url('https://fonts.googleapis.com/css2?family=Fira+Sans&family=Pacifico&display=swap'); */

#navbar {
    /* position: fixed; */
    width: 100%;
    /* height: 45px; */
    /* z-index: 1; */
    border-bottom: 1px solid rgb(226,228,232);
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 4px 10px 0 rgba(0, 0, 0, 0.19);
    background-color: rgb(255, 255, 255);
}

#navbar .title {
    font-family: 'Pacifico', cursive;
    font-size: 23px;
	display: inline-block;
    /* width: 100px; */
    margin: 0 20px;
}
#navbar .title a {
    text-decoration: none;
    color:rgb(204, 48, 0);
}
#navbar .title a:hover {
    color:rgb(151, 35, 0);
}
#navbar .title a:active {
    color:rgb(204, 48, 0);
}

#navbar .menu-container {
	display: inline-block;
    margin: 0;
}
#navbar .menu li {
    display: inline-block;
    margin: 0 20px;
}
#navbar .menu li a {
    font-family: 'Fira Sans', sans-serif;
    font-size: 15px;
    text-decoration: none;
    color:rgb(31, 31, 31);
}
#navbar .menu li a:hover {
    color:rgb(148, 148, 148);
    border-bottom: 2px solid rgb(148, 148, 148);
}
#navbar .menu li a:active {
    color:rgb(204, 48, 0);
    border-bottom: 2px solid rgb(204, 48, 0);
}
#navbar .menu li a:focus-within {
    color:rgb(204, 48, 0);
    border-bottom: 2px solid rgb(204, 48, 0);
}